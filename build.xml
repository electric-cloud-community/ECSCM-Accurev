<project name="ECSCM-Accurev" default="package" basedir=".">
	<description>
        Build the ECSCM-Accurev plugin
    </description>

    <property name="buildconfigdir" value="../build" />
    
	<!-- plugin specific properties -->
	<property name="pluginKey" value="ECSCM-Accurev" />
	<property name="pluginVersion" value="1.0" />
	
	<property name="gwtModules"
            value="ecplugins.ECSCM.Reports"/>
